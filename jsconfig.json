{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "*": ["src/*"],
      "components/*": [
        "./components/*"
      ],
      "containers/*": [
        "./containers/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "resources/*": [
        "./resources/*"
      ],
      "common/*": [
        "./common/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
